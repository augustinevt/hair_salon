<a href="/clients">Back to clients</a>

<div class="container">

<h1>Name: <%=@client.name()%></h1>
<h2>Phone: <%=@client.phone()%></h2>

<div class="well">
  <form class="form" action="/client/<%=@client.id()%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="name">Name
        <input type="text" name="name" value="<%=@client.name()%>">
      </label>
    </div>
    <div class="form-group">
      <label for="phone">phone
        <input type="text" name="phone" value="<%=@client.phone()%>">
      </label>
    </div>
    <div class="form-group">
      <label for="stylist_id">Stylist
        <select class="" name="stylist_id">
          <% @stylists.each do |stylist| %>
          <option value=" <%= stylist.id() %>">  <%=stylist.name %> </option>
          <%end%>
        </select>
      </label>
    </div>
    <button class="btn btn-info" type="submit" name="button">Update Client</button>
  </form>
</div>


<form class="" action="/client/<%=@client.id()%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-danger" type="submit" name="button">Delete Client</button>
</form>

</div>
