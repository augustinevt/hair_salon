<div class="container">



<a href="/stylists">Back to Stylists</a>

<h1><%=@stylist.name()%></h1>
<h2><%=@stylist.rate()%></h2>

<div class="well">
  <h2>This Stylist's Clients</h2>

    <%@clients.each do |client|%>
    <h2><a href="/client/<%=client.id()%>"><%= client.name %></a></h2>
    <%end%>

</div>

<div class="well">
  <h1>Update this Stylists</h1>
  <form class="form" action="/stylist/<%=@stylist.id()%>" method="post">
    <div class="form-group">
      <input type="hidden" name="_method" value="patch">
      <label for="name">Name
        <input type="text" name="name" value="<%=@stylist.name%>">
      </label>
    </div>
    <div class="form-group">
      <label for="rate">Rate
        <input type="text" name="rate" value="<%=@stylist.rate%>">
      </label>
    </div>
    <button class="btn btn-info"type="submit" name="button">Update Stylist</button>
  </form>
</div>

<form class="" action="/stylist/<%=@stylist.id()%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-danger" type="submit" name="button">Delete Stylist</button>
</form>

</div>
